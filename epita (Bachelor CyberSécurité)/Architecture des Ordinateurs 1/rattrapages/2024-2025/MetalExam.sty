% 1 Grille sur une largeur de #1 et une longueur de #2
\newcommand{\GrilleReponseXY}[2]{
\begin{tikzpicture}
\draw[step=0.5cm, lightgray, very thin] (0, 0) grid (#1, #2);
\end{tikzpicture}
}

% 1 Grille sur largeur de la page, mais longueur de #1
\newcommand{\GrilleReponseN}[1]{\GrilleReponseXY{16}{#1}}

% 1 Grille sur quelques centimètres (longueur page)
\newcommand{\GrilleReponse}{\GrilleReponseXY{16}{8}}

% 1 Grille sur une une longueur de #1, avec un texte #3 en premières lignes décalé de #2
\newcommand{\GrilleReponseTextUp}[3]{
\begin{tikzpicture}
\draw[step=0.5cm, lightgray, very thin] (0, 0) grid (16, #1);
%\node[draw=none] (X) at (#2 - 1, #1 - 0.25) {};
%\node[draw=none, align=left, anchor=north west] [right=of X] {\begin{tabular}{l}
\node[draw=none, align=left, anchor=north west] at (#2, #1 + 0.1) {\begin{tabular}{l}
#3
\end{tabular}};
\end{tikzpicture}
}

% 1 Grille sur une largeur de #1 et une longueur de #4, avec un texte #3 en premières lignes décalé de #3
