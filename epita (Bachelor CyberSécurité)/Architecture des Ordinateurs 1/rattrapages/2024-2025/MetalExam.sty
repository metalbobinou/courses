\draw[step=0.5cm, lightgray, very thin] (0, 0) grid (#1, #2);
\node[draw=none, align=left, anchor=north west] at (#3, #2 + 0.1) {\begin{tabular}{l}
#4
\end{tabular}};
\end{tikzpicture}
}

